{
    "files.associations": {
        "*.script": "lua"
    },
    "editor.fontFamily": "'Hack', 'Source Code Pro', Consolas, 'Courier New', monospace",
    "editor.fontSize": 13,
    "window.zoomLevel": 2,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.smoothScrolling": false,
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "Default Dark+",
    "vim.leader": " ",
    "vim.hlsearch": true,
    "vim.normalModeKeyBindings": [
        // Search actions: s -> ...
        {
            "before": ["<leader>", "s", "s"],
            "commands": [
                "actions.find"
            ]
        },
        {
            "before": ["<leader>", "s", "p"],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        // Project actions: p -> ...
        {
            "before": ["<leader>", "p", "p"],
            "commands": [
                "workbench.action.openRecent"
            ]
        },
        // File actions: f -> ...
        {
            "before": ["<leader>", "f", "r"],
            "commands": [
                "workbench.action.openRecent"
            ]
        },
        {
            "before": ["<leader>", "f", "f"],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        // Git actions: g -> ...
        {
            "before": ["<leader>", "g", "g"],
            "commands": [
                "magit.status"
            ]
        },
        // Window actions: w -> ...
        {
            "before": ["<leader>", "w", "v"],
            "commands": [
                "workbench.action.splitEditor"
            ]
        },
        {
            "before": ["<leader>", "w", "s"],
            "commands": [
                "workbench.action.splitEditorOrthogonal"
            ]
        },
        {
            "before": ["<leader>", "w", "c"],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": ["<leader>", "w", "b"],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
        {
            "before": ["<leader>", "w", "a"],
            "commands": [
                "workbench.action.toggleActivityBarVisibility"
            ]
        },
        // Code actions: c -> ...
        {
            "before": ["<leader>", "c", "d"],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": ["<leader>", "c", "D"],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        {
            "before": ["<leader>", "c", "F"],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": ["<leader>", "c", "f"],
            "commands": [
                "editor.action.formatSelection"
            ]
        },
        {
            "before": ["<leader>", "c", "c"],
            "commands": [
                "workbench.action.showCommands"
            ]
        },
        {
            "before": ["<leader>", "o", "t"],
            "commands": [
                "workbench.action.terminal.toggleTerminal"
            ]
        },
        {
            "before": ["<leader>", "t", "t"],
            "commands": [
                "workbench.action.terminal.toggleTerminal"
            ]
        },
    ],
    "vim.highlightedyank.enable": true,
    "vim.handleKeys": {
        "<C-f>": false
    },
    "vim.easymotionDimBackground": false,
    "editor.renderControlCharacters": true,
    "workbench.iconTheme": "vs-nomo-dark",
    "diffEditor.ignoreTrimWhitespace": false,
    "git.pruneOnFetch": true,
    "workbench.sideBar.location": "left",
    "workbench.activityBar.visible": false,
    "window.title": "${rootName}${separator}${activeEditorShort}",
    /*
     ;; name        gui       256       16
  ((bg         '("#242730" nil       nil))
   (bg-alt     '("#2a2e38" nil       nil))
   (base0      '("#1c1f24" "#101010" "black"        ))
   (base1      '("#1c1f24" "#1e1e1e" "brightblack"  ))
   (base2      '("#21272d" "#21212d" "brightblack"  ))
   (base3      '("#23272e" "#262626" "brightblack"  ))
   (base4      '("#484854" "#5e5e5e" "brightblack"  ))
   (base5      '("#62686E" "#666666" "brightblack"  ))
   (base6      '("#757B80" "#7b7b7b" "brightblack"  ))
   (base7      '("#9ca0a4" "#979797" "brightblack"  ))
   (base8      '("#DFDFDF" "#dfdfdf" "white"        ))
   (fg         '("#bbc2cf" "#bfbfbf" ))
   (fg-alt     '("#5D656B" "#5d5d5d" ))

   (grey       base4)
   (red        '("#ff665c" "#ff6655" ))
   (orange     '("#e69055" "#dd8844" ))
   (green      '("#7bc275" "#99bb66" ))
   (teal       '("#4db5bd" "#44b9b1" ))
   (yellow     '("#FCCE7B"           ))
   (blue       '("#51afef"           ))
   (dark-blue  '("#1f5582"           ))
   (magenta    '("#C57BDB"           ))
   (violet     '("#a991f1"           )) ;a9a1e1
   (cyan       '("#5cEfFF"           ))
   (dark-cyan  '("#6A8FBF"           ))

     ;; face categories
   (highlight      blue)
   (vertical-bar   base0)
   (selection      dark-blue)
   (builtin        magenta)
   (comments       (if doom-vibrant-brighter-comments dark-cyan base5))
   (doc-comments   (if doom-vibrant-brighter-comments (doom-lighten dark-cyan 0.15) (doom-lighten base4 0.3)))
   (constants      violet)
   (functions      cyan)
   (keywords       blue)
   (methods        violet)
   (operators      magenta)
   (type           yellow)
   (strings        green)
   (variables      base8)
   (numbers        orange)
   (region         "#3d4451")
   (error          red)
   (warning        yellow)
   (success        green)
   (vc-modified    yellow)
   (vc-added       green)
   (vc-deleted     red)
    */
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#51afef",
        "editorCursor.background": "#000",
        "terminalCursor.foreground": "#51afef",
        "terminalCursor.background": "#000",
        "window.activeBorder": "#232730",
        "titleBar.activeBackground": "#232730",
        "tab.activeBackground": "#21272d",
        "tab.activeBorder": "#21272d",
        "tab.inactiveBackground": "#1f2128",
        "tab.unfocusedInactiveModifiedBorder": "#1f2128",
        "activityBar.activeBackground": "#232730",
        "activityBar.background": "#1f2128",
        "activityBar.inactiveForeground": "#414657",
        "welcomePage.background": "#232730",
        "editor.background": "#242730",
        "editor.foreground": "#DFDFDF",
        "editorPane.background": "#1f2128",
        "editorLineNumber.activeForeground": "#DFDFDF",
        "scrollbar.shadow": "#1f2128",
        "sideBar.background": "#232730",
        "sideBar.border": "#1f2128",
        "panel.background": "#232730",
        "sideBarSectionHeader.background": "#232730",
        "statusBar.background": "#1f2128",
        "statusBar.foreground": "#dfdfdf",
        "editorGroupHeader.tabsBackground": "#1f2128",
    },
    "editor.tokenColorCustomizations": {
        "strings": "#7bc275",
        "comments": "#62686E",
        "keywords": "#51afef",
        "numbers": "#7bc275",
        "functions": "#5cEfFF",
        "types": "#FCCE7B",
        "variables": "#DFDFDF",
    }
}
